<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Границы черного цвета -->
    <item>
        <shape>
            <stroke android:width="4dp" android:color="@color/white" /> <!-- Черные границы -->
            <corners android:radius="64dp" /> <!-- Здесь можно указать радиус скругления углов -->
        </shape>
    </item>
    <!-- Фон белого цвета -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape>
            <solid android:color="#00ffffff" /> <!-- Белый цвет фона -->
            <corners android:radius="60dp" /> <!-- Здесь можно указать радиус скругления углов минус толщина границ -->
        </shape>
    </item>
</layer-list>
